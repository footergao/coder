<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="@color/top_bar_bg"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/top_btn_center"
        style="@style/pyw_topWhite_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/top_btn_left"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/glk_back" />

    <Button
        android:id="@+id/top_btn_right"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/search_bg" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+id/top_btn_right"
        android:layout_toRightOf="@+id/top_btn_left"
        android:background="@drawable/edit_bg"
        android:ems="10"
        android:singleLine="true"
        android:visibility="gone"
         >
    </EditText>

    <Button
        android:id="@+id/top_btn_search"
        style="@style/pyw_topWhite_tv"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/search_bg"
        android:textColor="@color/white"
        android:visibility="gone" />

</RelativeLayout>