<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="@color/top_bar_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/top_btn_center"
        style="@style/pyw_topWhite_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:text="终端列表"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/top_btn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/glk_back" />

    <Button
        android:id="@+id/top_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/search_bg" />

    <Button
        android:id="@+id/top_btn_right1"
        style="@style/pyw_topWhite_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/top_btn_right"
        android:background="@drawable/map_selector_btn"
        android:textColor="@color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/top_btn_right2"
        style="@style/pyw_topWhite_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/top_btn_right1"
        android:background="@drawable/search_selector_btn"
        android:text=""
        android:textColor="@color/white"
        android:visibility="gone" />

</RelativeLayout>